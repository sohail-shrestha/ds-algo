{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "./build/"          
  },
  "include": [
    "src/**/*", "tests/**/*"
  ],
  "exclude": ["node_modules"]
  
  
}
